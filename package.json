{
  "name": "permask",
  "version": "1.0.0",
  "description": "A lightweight utility library for managing permission bitmasks with groups and access levels",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "vite build",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "biome check",
    "lint:fix": "npm run lint -- --write",
    "prepare": "husky",
    "husky:pre-commit": "npm run lint",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@anolilab/semantic-release-pnpm": "^1.1.7",
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/express": "^5.0.0",
    "@vitest/coverage-v8": "^3.0.1",
    "biome": "^0.3.3",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "semantic-release": "^24.2.1",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^3.0.1"
  },
  "files": ["dist/*", "package.json", "README.md", "LICENSE", "CHANGELOG.md"],
  "keywords": [
    "bitmask",
    "access",
    "permissions",
    "authorization",
    "auth",
    "hono",
    "nest",
    "express",
    "itty-router",
    "express"
  ],
  "author": "dschewchenko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dschewchenko/permask/issues"
  },
  "homepage": "https://github.com/dschewchenko/permask#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/dschewchenko/big.esm.git"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@anolilab/semantic-release-pnpm",
      "@semantic-release/git"
    ],
    "branches": ["main"]
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=20.9.0",
    "pnpm": ">=10.0.0"
  }
}
