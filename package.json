{
  "name": "permask",
  "version": "1.0.0",
  "type": "module",
  "description": "A lightweight utility library for managing permission bitmasks with groups and access levels",
  "main": "dist/permask.cjs",
  "module": "dist/permask.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "vite build",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "biome check",
    "lint:fix": "npm run lint -- --write",
    "prepare": "husky",
    "husky:pre-commit": "npm run lint",
    "prepublishOnly": "npm run build",
    "release": "bumpp -r"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/express": "^5.0.0",
    "@vitest/coverage-v8": "^3.0.8",
    "biome": "^0.3.3",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "typescript": "^5.8.2",
    "vite": "^6.2.1",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.0.8",
    "bumpp": "^10.1.0"
  },
  "files": [
    "dist/*",
    "package.json",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "keywords": [
    "bitmask",
    "access",
    "permissions",
    "authorization",
    "auth",
    "hono",
    "nest",
    "express",
    "itty-router",
    "express"
  ],
  "author": "dschewchenko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dschewchenko/permask/issues"
  },
  "homepage": "https://github.com/dschewchenko/permask#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/dschewchenko/permask.git"
  },
  "engines": {
    "node": ">=20.9.0",
    "pnpm": ">=10.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "core-js",
      "esbuild"
    ]
  }
}
