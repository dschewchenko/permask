{
  "name": "permask",
  "version": "2.1.1",
  "type": "module",
  "description": "A lightweight utility library for managing permission bitmasks with groups and access levels",
  "workspaces": [
    "playground/**"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/integrations/*/index.d.ts",
      "import": "./dist/integrations/*/index.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "bunx vite build",
    "test": "bunx vitest",
    "test:coverage": "bunx vitest run --coverage",
    "lint": "bunx biome check .",
    "lint:fix": "bun run lint -- --write",
    "prepare": "bunx is-ci || bunx husky",
    "husky:pre-commit": "bun run lint",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@nestjs/common": "^11.1.9",
    "@nestjs/core": "^11.1.9",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@types/express": "^5.0.6",
    "@types/koa": "^3.0.1",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "elysia": "^1.4.19",
    "fastify": "^5.3.3",
    "h3": "^1.13.1",
    "hono": "^4.11.1",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "itty-router": "^5.0.22",
    "reflect-metadata": "^0.2.2",
    "semantic-release": "^25.0.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "@types/express": "^4.17.0 || ^5.0.0",
    "@types/koa": "^2.0.0 || ^3.0.0",
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/core": "^10.0.0 || ^11.0.0",
    "elysia": "^1.0.0",
    "express": "^4.18.0 || ^5.0.0",
    "fastify": "^4.0.0 || ^5.0.0",
    "h3": "^1.0.0 || ^2.0.0-0",
    "hono": "^4.0.0",
    "itty-router": "^5.0.0",
    "koa": "^2.0.0",
    "nitropack": "^2.0.0",
    "reflect-metadata": "^0.2.0"
  },
  "peerDependenciesMeta": {
    "@types/express": {
      "optional": true
    },
    "@types/koa": {
      "optional": true
    },
    "@nestjs/common": {
      "optional": true
    },
    "@nestjs/core": {
      "optional": true
    },
    "elysia": {
      "optional": true
    },
    "express": {
      "optional": true
    },
    "fastify": {
      "optional": true
    },
    "h3": {
      "optional": true
    },
    "hono": {
      "optional": true
    },
    "itty-router": {
      "optional": true
    },
    "koa": {
      "optional": true
    },
    "nitropack": {
      "optional": true
    },
    "reflect-metadata": {
      "optional": true
    }
  },
  "files": [
    "dist/*",
    "package.json",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "keywords": [
    "bitmask",
    "access",
    "permissions",
    "authorization",
    "auth",
    "hono",
    "nest",
    "express",
    "itty-router"
  ],
  "author": "dschewchenko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dschewchenko/permask/issues"
  },
  "homepage": "https://github.com/dschewchenko/permask#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/dschewchenko/permask.git"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "provenance": true
  },
  "packageManager": "bun@1.3.1",
  "engines": {
    "node": ">=20.9.0",
    "bun": ">=1.0.0"
  }
}
